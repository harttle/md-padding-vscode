{
	"name": "md-padding-vscode",
	"displayName": "Markdown Padding",
	"description": "修复 Markdown 中的混排空格：中英文、数字、链接等。",
	"version": "1.6.1",
	"publisher": "harttle",
	"engines": {
		"vscode": "^1.41.0"
	},
	"categories": [
		"Formatters"
	],
	"activationEvents": [
		"onCommand:extension.md-padding"
	],
	"main": "./out/extension.js",
	"contributes": {
		"configuration": {
			"title": "Markdown Padding",
			"properties": {
				"mdpadding.ignoreWords": {
					"type": "array",
					"default": [],
					"description": "The words/strings you need markdown padding to ignore and leave as it is."
				}
			}
		},
		"commands": [
			{
				"command": "extension.md-padding",
				"title": "Markdown Padding"
			}
		]
	},
	"scripts": {
		"build": "tsc -p ./",
		"lint": "eslint src --ext ts",
		"watch": "tsc -watch -p ./",
		"pretest": "npm run build && npm run lint",
		"test": "node ./out/test/runTest.js",
		"semantic-release": "npx semantic-release"
	},
	"repository": {
		"type": "git",
		"url": "https://github.com/harttle/md-padding-vscode.git"
	},
	"devDependencies": {
		"@semantic-release/changelog": "^6.0.3",
		"@semantic-release/commit-analyzer": "^11.1.0",
		"@semantic-release/exec": "^6.0.3",
		"@semantic-release/git": "^10.0.1",
		"@semantic-release/release-notes-generator": "^12.1.0",
		"@types/glob": "^7.1.1",
		"@types/mocha": "^7.0.1",
		"@types/node": "^12.11.7",
		"@types/vscode": "^1.41.0",
		"@typescript-eslint/eslint-plugin": "^2.18.0",
		"@typescript-eslint/parser": "^2.18.0",
		"eslint": "^6.8.0",
		"glob": "^7.1.6",
		"mocha": "^7.0.1",
		"typescript": "^3.7.5",
		"vscode-test": "^1.3.0"
	},
	"dependencies": {
		"md-padding": "^1.9.2"
	},
	"release": {
		"branch": "master",
		"verifyConditions": [
			"@semantic-release/github"
		],
		"plugins": [
			"@semantic-release/commit-analyzer",
			"@semantic-release/release-notes-generator",
			"@semantic-release/changelog",
			[
				"@semantic-release/npm",
				{
					"npmPublish": false
				}
			],
			[
				"@semantic-release/exec",
				{
					"publishCmd": "npx vsce package && npx vsce publish --pat $VSCE_TOKEN"
				}
			],
			[
				"@semantic-release/github",
				{
					"assets": [
						{
							"path": "*.vsix",
							"label": "VSCode Extension"
						}
					]
				}
			],
			[
				"@semantic-release/git",
				{
					"assets": [
						"docs",
						"package.json",
						"*.vsix",
						"package-lock.json",
						"CHANGELOG.md"
					],
					"message": "chore(release): ${nextRelease.version} [skip ci]\n\n${nextRelease.notes}"
				}
			]
		]
	}
}
